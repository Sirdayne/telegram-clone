$PRIMARY_COLOR = #5682a3
$BACK_COLOR = rgb(231, 235, 240)

$FONT_FAMILY = Tahoma, sans-serif, Arial, Helvetica;

::-webkit-scrollbar
  width 1px
  height 1px
  background-color #D3DCE6
::-webkit-scrollbar-button
::-webkit-scrollbar-track
  display none
::-webkit-scrollbar-thumb
  background-color #7d7d7d
::-webkit-scrollbar-thumb:hover
  background-color #525252

#app
  height 100vh
  width 100%
  background: $BACK_COLOR
  color #000
  display flex
  justify-content center
  font-family $FONT_FAMILY

#main-page
  background #fff
  max-width 1010px;
  min-width 300px;
  width 100%
  height 100%

#header
  width 100%
  height 48px
  box-sizing border-box
  font-size 14px
  line-height 16px
  padding 15px 0 0 60px
  color #fff 
  background $PRIMARY_COLOR

#contacts
  float left
  width 31%
  height calc(100% - 48px)
  border 1px solid rgb(233, 235, 237)
  box-sizing border-box

#chat
  float left
  width 69%
  height calc(100% - 48px)



